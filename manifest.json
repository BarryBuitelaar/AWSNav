{
  "manifest_version": 2,
  "name": "AWSNav",
  "version": "0.1.0",
  "description": "Create a extra navigation in AWS",
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["content.js", "globals.js"],
    "matches": [
      "https://eu-west-1.console.aws.amazon.com/*",
      "https://eu-central-1.console.aws.amazon.com/*",
      "https://console.aws.amazon.com/*"
    ]
  }],
  "icons": {
    "48": "./assets/inqdo-logo.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "AWSNav",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}